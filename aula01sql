CREATE TABLE  PAIS (
    ID_PAIS NUMBER PRIMARY KEY GENERATED ALWAYS AS IDENTITY,
    NOME VARCHAR2(30),
    PRIMARY KEY(ID_PAIS));
                    
                    
CREATE TABLE  ESTADO (
    ID_ESTADO NUMBER GENERATED ALWAYS AS IDENTITY,
    NOME VARCHAR2(30),
    PRIMARY KEY(ID_ESTADO));
                
                
ALTER TABLE ESTADO ADD CONSTRAINT FK_ESTADO FOREIGN KEY REFERENCES (ID_PAIS) REFERENCE PAIS;

CREATE TABLE CIDADE (
    ID_CIDADE  NUMBER GENERATED ALWAYS AS IDENTITY,
    NOME VARCHAR2(30),
    ID_ESTADO NUMBER
    PRIMARY KEY (ID_ESTADO)
);

CREATE TABLE BAIRRO (
    ID_BAIRRO  NUMBER GENERATED ALWAYS AS IDENTITY,
    NOME VARCHAR2(30)
    ID_CIDADE 
    PRIMARY KEY (ID_BAIRRO)
);
 
ALTER TABLE BAIRRO ADD CONSTRAINT FK_BAIRRO FOREIGN KEY REFERENCES (ID_BAIRRO) REFERENCE CIDADE;

CREATE TABLE ENDERECO (
    ID_CIDADE NUMER GENERATED ALWAYS AS IDENTITY,
    NOME VARCHAR2(30)
);